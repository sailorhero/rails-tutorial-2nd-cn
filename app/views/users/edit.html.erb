<!-- encoding: utf-8 -->
<% provide(:title, "编辑个人信息") %>
<h1>编辑个人信息</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

    <%= render 'fields', f:f %>

      <%= f.submit "保存", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <%= link_to 'change', "http://gravatar.com/emails", target: "_blank" %>
  </div>
</div>