<!-- encoding: utf-8 -->
<%= provide(:title,"Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:sessions, url:sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.submit "登录", class:"btn btn-large btn-primary" %>
    <% end%>

    <p>新用户?<%= link_to "注册新用户", signup_path %></p>
  </div>
</div>